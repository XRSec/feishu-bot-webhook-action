{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "rootDir": "./",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "esModuleInterop": true
  },
  "exclude": ["./dist", "./node_modules", "./__tests__", "./coverage"]
}
